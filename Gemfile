  gem 'capybara'
  gem 'cucumber-rails', require: false
  gem 'database_cleaner'
  gem 'guard-coffeescript'
  gem 'guard-rspec'
  gem 'inherited_resources'
  gem 'jasmine'
  gem 'jslint_on_rails', '~> 1.0.6'
  gem 'launchy'
  gem 'rspec-mocks'
  gem 'rspec-rails'
  gem 'sass-rails'
  gem 'shoulda-matchers', '1.0.0'
  gem 'simplecov', require: false
end
